
.container {
  box-sizing: border-box;
  justify-content: space-between;
  display: flex;
  position: fixed;
  height: 100%;
  width: 100%;
  top: 120rpx;
  bottom: 0;
}

.content-left {
  width: 200rpx;
  background: #ddd;
  overflow-y: auto;
}

.content-left .item {
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 1px #ccc solid;
}

.content-left .active {
  color: #ff2d4a;
  background: #fff;
  position: relative;
}

.content-left .active::before {
  position: absolute;
  display: block;
  content: "";
  width: 3px;
  height: 80rpx;
  background: red;
  left: 0;
  top: 10rpx;
}

.content-right {
  box-sizing: border-box;
  flex: 1;
  padding: 0 10px;
  margin: 20px 0;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

.content-right .details {
  font-size: 24px;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
}

.content-right .product-list {
  display: flex;
  flex-wrap: wrap;
}

.content-right .product-list image {
  width: 120rpx;
  height: 120rpx;
  padding: 10px;
}

.content-right .product-list view {
  font-size: 14px;
  text-align: center;
}
